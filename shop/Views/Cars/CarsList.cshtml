<h2>Все авто</h2>
<h3>@Model.CarCategory</h3>

<div class="row mt-5 mb-2">
        @{
            foreach (var car in Model.GetAllCars)
            {
                <div class="col-lg-4">
                    <img class="img-thumbnail" src="@car.img" alt="@car.name" width="300" height="500"/>
                    <h3>Модель: @car.name</h3>
                    <p>@car.ShortDesc</p>
                    <p>Цена: @car.price.ToString("C")</p>
                    <p><a class="btn btn-info" href="#">Подробнее</a></p>
                </div>
            }
        }
 </div>